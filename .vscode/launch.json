  "version": "0.2.0",
  "configurations": [
    {
      "name": "Basic examples",
      "type": "python",
      "request": "launch",
      "program": "examples/basic_example.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        // "PYTHONPATH": "${workspaceFolder}/tinta"
      },
      "justMyCode": true
    },
    {
      "name": "Complete example set",
      "type": "python",
      "request": "launch",
      "program": "examples/complete_example.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        // "PYTHONPATH": "${workspaceFolder}/tinta"
      },
      "justMyCode": true
    },
    {
      "name": "Run Tinta tests",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "module": "pytest",
      "env": {
        "_PYTEST_RAISE": "1"
      },
      "args": ["-xv"]
    }
  ]
}
